{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest", "@jest/globals", "@testing-library/jest-dom", "node"]
  },
  "include": ["tools/**/*", "tests/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist", "apps", "packages"]
}
