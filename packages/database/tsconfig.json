{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "typeRoots": ["../../node_modules/@types"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../apps/web/*"],
      "@/lib/*": ["../../apps/web/lib/*"],
      "@repo/database/schema": ["./schema"]
    }
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
}
