{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@0.0.38"],
      "alwaysAllow": [
        "browser_navigate",
        "browser_take_screenshot",
        "browser_snapshot",
        "browser_evaluate",
        "browser_wait_for",
        "browser_tabs",
        "browser_click",
        "browser_fill_form",
        "browser_console_messages"
      ]
    }
  }
}
